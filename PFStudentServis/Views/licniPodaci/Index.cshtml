<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Login</title>

    @Styles.Render("~/css/bootstrap.min.css")
    @Styles.Render("~/Content/css")

</head>
<body>
    <div class="container">


        <div class="panel panel-default col-md-12">
            <div class="panel-body">

                <h3 class="bg-info text-center">Opšti podaci</h3>



                <div class="row">


                    <!--Broj indeksa-->
                    <div class="col-md-2">
                        <label for="Brojindeksa">Broj indeksa:</label>
                        <input id="Brojindeksa" name="Brojindeksa" placeholder=" " class="form-control input-md" type="text">
                        <span class="help-block"> </span>
                    </div>


                    <!--Ime i prezime-->
                    <div class="col-md-6">
                        <label for="ImeIPrezime">Ime i prezime:</label>
                        <input id="ImeIPrezime" name="ImeIPrezime" placeholder=" " class="form-control input-md" type="text">
                        <span class="help-block"> </span>
                    </div>


                    <!--Ime jednog roditelja-->

                    <div class="col-md-4">
                        <label for="ImeJednogRoditelja">Ime jednog roditelja:</label>
                        <input id="ImeJednogRoditelja" name="ImeJednogRoditelja" placeholder=" " class="form-control input-md" type="text">
                        <span class="help-block"> </span>
                    </div>

                    <!--Datum rođenja-->
                    <div class="col-md-2">
                        <label for="DatumRodjenja">Datum rođenja:</label>
                        <input id="DatumRodjenja" name="DatumRodjenja" placeholder=" " class="form-control input-md" type="text">
                        <span class="help-block"> </span>
                    </div>

                    <!--Mesto rođenja-->
                    <div class="col-md-4">
                        <label for="MestoRodjenja">Mesto rođenja:</label>
                        <input id="MestoRodjenja" name="MestoRodjenja" placeholder=" " class="form-control input-md" type="text">
                        <span class="help-block"> </span>
                    </div>


                    <!--JMBG-->

                    <div class="col-md-2">
                        <label for="JMBG">JMBG:</label>
                        <input id="JMBG" name="JMBG" placeholder=" " class="form-control input-md" type="text">
                        <span class="help-block"> </span>
                    </div>

                    <!--E-mail-->
                    <div class="col-md-4">
                        <label for="Email">E-mail:</label>
                        <input id="Email" name="Email" placeholder=" " class="form-control input-md" type="text">
                        <span class="help-block"> </span>
                    </div>

                    <!--Telefon-->
                    <div class="col-md-4">
                        <label for="Telefon">Telefon:</label>
                        <input id="Telefon" name="Telefon" placeholder=" " class="form-control input-md" type="text">
                        <span class="help-block"> </span>
                    </div>
                    <!--Telefon tokom studija-->
                    <div class="col-md-4">
                        <label for="TelefonTokomStudija">Telefon tokom studija:</label>
                        <input id="TelefonTokomStudija" name="TelefonTokomStudija" placeholder=" " class="form-control input-md" type="text">
                        <span class="help-block"> </span>
                    </div>
                    <!--Mobilni telefon-->
                    <div class="col-md-4">
                        <label for="MobilniTelefon">Mobilni telefon:</label>
                        <input id="MobilniTelefon" name="MobilniTelefon" placeholder=" " class="form-control input-md" type="text">
                        <span class="help-block"> </span>
                    </div>
                    <!--Linija-->
                    <div class="row">
                        <!-- You can also position the row if need be. -->
                        <div class="col-md-12 col-lg-12">
                            <!-- set width of column I wanted mine to stretch most of the screen-->
                            <hr style="min-width:85%; background-color:rgb(105, 111, 165); height:1px;" />
                        </div>
                    </div>
                    <!--Stanje-->
                    <div class="col-md-4 col-md-offset-8">
                        <label for="Stanje">Stanje na računu:</label>
                        <input id="Stanje" name="Stanje" placeholder=" " class="form-control input-md" type="text">
                        <span class="help-block"> </span>
                    </div>

                    <!--Linija-->
                    <div class="row">
                        <!-- You can also position the row if need be. -->
                        <div class="col-md-12 col-lg-12">
                            <!-- set width of column I wanted mine to stretch most of the screen-->
                            <hr style="min-width:85%; background-color:rgb(105, 111, 165); height:1px;" />
                        </div>
                    </div>

                    <!-- Dodaj/Obriši/Snimi/Pronađi -->
                    <div class="form-group">

                        <div class="col-md-12">
                            <button id="promeni" name="promeni" class="btn btn-primary">
                                Promeni
                                <span class="glyphicon glyphicon-pencil"></span>
                            </button>
                            <button id="snimi" name="snimi" class="btn btn-success">
                                Snimi
                                <span class="glyphicon glyphicon-floppy-save"></span>
                            </button>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



</body>

</html>
